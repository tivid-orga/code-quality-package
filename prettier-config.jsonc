{
	"overrides": [
		{
			"files": "*.vue", // we only need prettier to format vue files since biome handles everything else
			"options": {
				"printWidth": 120,
				"tabWidth": 2,
				"useTabs": false,
				"semi": true,
				"singleQuote": true,
				"trailingComma": "none",
				"bracketSpacing": false,
				"arrowParens": "always",
				"endOfLine": "lf",
				"quoteProps": "consistent",
				"parser": "vue",
				"vueIndentScriptAndStyle": true,
				"singleAttributePerLine": true
			}
		}
	]
}
